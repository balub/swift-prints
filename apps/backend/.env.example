# Swift Prints Backend Environment Configuration

# Application
APP_NAME="Swift Prints Backend"
APP_VERSION="0.1.0"
DEBUG=true

# Database
DATABASE_URL="sqlite:///./swift_prints.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost/swift_prints"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Supabase Authentication
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"

# Storage Configuration
STORAGE_BACKEND="local"  # Options: "local" or "s3"

# AWS S3 Configuration (only needed if STORAGE_BACKEND=s3)
AWS_ACCESS_KEY=""
AWS_SECRET_KEY=""
AWS_BUCKET=""
AWS_REGION="us-east-1"

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR="./uploads"

# PrusaSlicer Docker
PRUSA_SLICER_IMAGE="prusaslicer:latest"

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# Security
SECRET_KEY="your-secret-key-change-in-production"

# CORS
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]