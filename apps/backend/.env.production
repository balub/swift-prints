# Swift Prints Backend - Production Environment

# Application
APP_NAME="Swift Prints Backend"
APP_VERSION="0.1.0"
DEBUG=false

# Database
DATABASE_URL="postgresql://swiftprints:${DB_PASSWORD}@db:5432/swiftprints"

# Redis
REDIS_URL="redis://redis:6379/0"

# Supabase Authentication
SUPABASE_URL="${SUPABASE_URL}"
SUPABASE_KEY="${SUPABASE_KEY}"

# Storage Configuration
STORAGE_BACKEND="s3"

# AWS S3 Configuration
AWS_ACCESS_KEY="${AWS_ACCESS_KEY}"
AWS_SECRET_KEY="${AWS_SECRET_KEY}"
AWS_BUCKET="${AWS_BUCKET}"
AWS_REGION="${AWS_REGION}"

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR="./uploads"

# PrusaSlicer Docker
PRUSA_SLICER_IMAGE="prusaslicer:latest"

# Celery Configuration
CELERY_BROKER_URL="redis://redis:6379/1"
CELERY_RESULT_BACKEND="redis://redis:6379/1"

# Security
SECRET_KEY="${SECRET_KEY}"

# CORS
ALLOWED_ORIGINS=["https://app.swiftprints.com", "https://www.swiftprints.com"]

# Monitoring
SENTRY_DSN="${SENTRY_DSN}"
LOG_LEVEL="INFO"